<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/g">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="Medium Text"
        android:id="@+id/item_name"
        android:layout_marginTop="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FF45A7C0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/item_price"
        android:textColor="#FF45A7C0"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/item_location"
        android:layout_alignBottom="@+id/item_location"
        android:layout_toRightOf="@+id/item_name"
        android:layout_toEndOf="@+id/item_name" />

    <ImageView
        android:id="@+id/item_photo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:src="@drawable/images"
        android:layout_marginTop="111dp"
        android:layout_below="@+id/item_location"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/item_location"
        android:layout_below="@+id/item_name"
        android:layout_alignLeft="@+id/item_name"
        android:layout_alignStart="@+id/item_name"
        android:layout_alignRight="@+id/item_name"
        android:layout_alignEnd="@+id/item_name"
        android:textColor="#FF45A7C0"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Discreption"
        android:id="@+id/textView8"
        android:layout_below="@+id/item_photo"
        android:layout_alignLeft="@+id/item_location"
        android:layout_alignStart="@+id/item_location"
        android:layout_marginTop="85dp"
        android:textColor="#FF45A7C0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete_button"
        android:layout_above="@+id/item_price"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/ic_delete"
        android:visibility="visible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Seller"
        android:id="@+id/contact_button"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="111dp"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_toLeftOf="@+id/delete_button"
        android:layout_toStartOf="@+id/delete_button"
        android:background="#FF45A7C0"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:visibility="visible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/item_desc"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/contact_button"
        android:layout_alignStart="@+id/contact_button" />


</RelativeLayout>
</ScrollView>